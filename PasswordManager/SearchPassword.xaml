<Window x:Class="PasswordManager.SearchPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="SearchPassword" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Back" Click="Button_Click" Margin="10,10,10,20"/>                
            </StackPanel>

            <TextBox x:Name="txtSearch" Margin="10,10,10,5"/>
            <Button Content="Search for Password" Click="SearchForPassword_Click" Margin="10,0,10,10"/>
                
            <Button Content="ShowAll" Click="ShowAll_Click" Margin="10,10,10,20"/>
        </StackPanel>
        <TextBlock x:Name="txtBlock" Grid.Column="1" Margin="10,10,10,10"/>
    </Grid>
</Window>
