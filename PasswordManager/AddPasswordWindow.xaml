<Window x:Class="PasswordManager.AddPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="Add Password" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Title:" Margin="10 10 0 0"/>
            <TextBox x:Name="TitleTextBox" Margin="10 0 10 0"/>
            <TextBlock Text="Password: " Margin="10 10 0 0"/>
            <TextBox x:Name="PasswordTextBox" Margin="10 0 10 0"/>
            <TextBlock Text="Url: " Margin="10 10 0 0"/>
            <TextBox x:Name="UrlTextBox" Margin="10 0 10 0"/>
            <TextBlock Text="Comment: " Margin="10 10 0 0"/>
            <TextBox x:Name="CommentTextBox" Margin="10 0 10 0"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
