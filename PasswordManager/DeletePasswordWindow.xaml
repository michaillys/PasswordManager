<Window x:Class="PasswordManager.DeletePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="DeletePasswordWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Delete Password" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="Enter title to delete" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="txtDeleteBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button Content="Search" Width="100" Height="30" HorizontalAlignment="Center" Click="Search_Click"/>
            <Label Content="URL" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="0,20,0,10"/>
            <TextBlock x:Name="txtUrl" Width="200" Height="30" Margin="0,0,0,10"/>            
            <Button Content="Delete" Width="100" Height="30" HorizontalAlignment="Center" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
